{
  "name": "express-file-routing-boilerplate",
  "version": "1.0.0",
  "description": "Simple express boilerplate with express-file-routing & typescript",
  "author": {
    "name": "Luca Voges",
    "email": "info@sociant.de"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-file-routing": "^2.0.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^18.7.13",
    "concurrently": "^7.3.0",
    "nodemon": "^2.0.19",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.7.0",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.2"
  },
  "scripts": {
    "dev": "nodemon -e ts,js --exec ts-node -r tsconfig-paths/register ./src/app.ts",
